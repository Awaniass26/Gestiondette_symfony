{% extends 'base.html.twig' %}

{% block title %}Hello DemandeController!{% endblock %}

{% block body %}
<style>
    .main-content {
            display: flex;
            flex-direction: column;
        }

        .product-lists {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .product-list {
            width: 100%;
        }

        @media (min-width: 768px) {
            .product-lists {
                flex-direction: row;
            }

            .product-list {
                width: 100%;
            }
        }

        @media (max-width: 767px) {
            .product-list {
                margin-bottom: 1rem;
            }
        }

        .table-responsive {
            overflow-x: auto;
        }

        @media (max-width: 640px) {
            .table-responsive {
                font-size: 0.8rem;
            }
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .stat-icon {
            background: linear-gradient(135deg, #3182ce, #2b6cb0);
        }
        </style>

        <main class="mt-8 mx-4 md:mr-8 rounded-xl bg-white p-4 shadow-sm flex flex-col main-content">
                <div class="product-lists">
                    <div class="product-list bg-white rounded-lg shadow p-4 w-full">
                        <div class="p-4 sm:p-6 md:p-8 mb-8"
                            style="background: linear-gradient(to right, #2b6cb0, #2d3748)">
                            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
                                <!-- Carte Total des Dettes -->
                                <div
                                    class="stat-card rounded-lg p-4 sm:p-6 text-white font-semibold text-lg sm:text-xl md:text-2xl flex flex-col justify-between">
                                    <div class="flex flex-col justify-center space-y-4">
                                        <div
                                            class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 md:space-x-8">
                                            <img src="https://images.unsplash.com/photo-1499714608240-22fc6ad53fb2"
                                                alt="User Photo"
                                                class="w-24 h-24 sm:w-32 sm:h-32 md:w-36 md:h-36 rounded-full">
                                            <div
                                                class="flex flex-col justify-between h-full pb-4 text-center sm:text-left">
                                                <p>Prenom: Ibrahima Sory</p>
                                                <p>Nom: Diallo</p>
                                                <p>Tel: 785619115</p>
                                            </div>
                                        </div>
                                        <p class="email text-center sm:text-left">Email: sorydiallo371@gmail.com</p>
                                    </div>
                                </div>

                                <!-- Carte Demandes en Cours -->
                                <div
                                    class="stat-card rounded-lg p-4 sm:p-6 font-semibold text-white text-lg sm:text-xl md:text-3xl flex flex-col justify-between">
                                    <p>Montant Total: 100.000 FCFA</p>
                                    <p>Montant Versé: 55.000 FCFA</p>
                                    <p>Montant Restant: 45.000 FCFA</p>
                                </div>
                            </div>
                        </div>
                        <div class="overflow-x-auto">
                            <div class="flex justify-end gap-4 mb-4">
                                <button type="button" class="bg-red-500 text-white px-4 py-2 rounded">ANNULER</button>
                                <button type="submit"
                                    class="bg-blue-600 text-white px-4 py-2 rounded">ENREGISTRER</button>
                            </div>
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-blue-500 text-white">
                                        <th class="py-2 px-4 text-center">ARTICLE</th>
                                        <th class="py-2 px-4 text-center">PRIX</th>
                                        <th class="py-2 px-4 text-center">QUANTITÉ</th>
                                        <th class="py-2 px-4 text-center">MONTANT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="py-2 px-4 text-center">24-07-2024</td>
                                        <td class="py-2 px-4 text-center">20.000</td>
                                        <td class="py-2 px-4 text-center">50</td>
                                        <td class="py-2 px-4 text-center">100000 FCFA</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="w-full h-12 flex justify-between mt-4 flex-wrap">
                            <div class="flex justify-between w-full">
                                <div type="button"
                                    class="text-black border flex gap-2 font-semibold px-2 py-2 rounded-lg">Total: <p
                                        class="font-bold">25000 FCFA</p>
                                </div>
                                <div class="flex justify-center mt-4 mb-2 sm:mb-0">
                                    <button class="px-3 py-1 border rounded mr-1">&lt;</button>
                                    <button class="px-3 py-1 border rounded mr-1 bg-blue-500 text-white">1</button>
                                    <button class="px-3 py-1 border rounded mr-1">2</button>
                                    <button class="px-3 py-1 border rounded">&gt;</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
{% endblock %}